{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./src",
  "roots": ["../test"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testTimeout": 20000,
  "setupFiles": [
    "dotenv/config"
  ],
  "setupFilesAfterEnv": [
    "../test/e2e/set-up-db.ts"
  ],
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage/e2e",
  "silent": true
}
